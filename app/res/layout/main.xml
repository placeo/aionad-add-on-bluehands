<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:id="@+id/control_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:background="#BAC6DE">
            <ImageView
                android:id="@+id/imageview_logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/bluehands_top_logo"
                android:contentDescription="@string/logo_description"
                android:layout_gravity="left|center_vertical"
                android:scaleType="fitStart" />
        </FrameLayout>
        
        <!-- Car Repair Status Info List -->
        <TextView
            android:id="@+id/car_repair_status_info_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="10sp"
            android:textColor="#0a2540"
            android:fontFamily="monospace"
            android:background="#F0F0F0"
            android:text="Car Repair Status Info will be displayed here..."
            android:scrollbars="vertical"
            android:textIsSelectable="true" />
        
        <!-- Status Summary -->
        <TextView
            android:id="@+id/status_summary_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="작업완료: 0대, 최종점검: 0대, 작업중: 0대"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#0a2540"
            android:background="#E6FFFFFF"
            android:padding="12dp" />
        
        <!-- Guideline과 WebView는 LinearLayout 바깥으로 이동 -->
    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top_of_webview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85" />

    <!-- Car Repair Status 로고 -->
    <ImageView
        android:id="@+id/car_repair_status_logo"
        android:layout_width="140dp"
        android:layout_height="0dp"
        android:src="@mipmap/bluehands_car_repair_status_logo"
        android:contentDescription="Car Repair Status Logo"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_margin="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline_top_of_webview"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- WebView를 로고 오른쪽에 배치 -->
    <WebView
        android:id="@+id/car_repair_status_webview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="0dp"
        app:layout_constraintStart_toEndOf="@id/car_repair_status_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline_top_of_webview"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>